{
  "tasks": {
    "dev": "deno run --watch --allow-net --allow-read --allow-write --allow-env --quiet main.ts",
    "start": "deno run --allow-net --allow-read --allow-env --quiet main.ts",
    "test": "deno test --allow-net --allow-read --allow-env --allow-import",
    "lint": "deno lint",
    "fmt": "deno fmt"
  },
  "imports": {
    "firebase-admin": "npm:firebase-admin@latest",
    "std/": "https://deno.land/std@0.224.0/",
    "oak": "https://deno.land/x/oak@v12.6.1/mod.ts",
    "dotenv": "https://deno.land/std@0.224.0/dotenv/mod.ts",
    "cors": "https://deno.land/x/cors@v1.2.2/mod.ts",
    "@std/assert": "jsr:@std/assert@1"
  },
  "fmt": {
    "indentWidth": 2,
    "lineWidth": 100,
    "semiColons": true,
    "singleQuote": true
  },
  "lint": {
    "rules": {
      "tags": ["recommended"]
    }
  },
  "compilerOptions": {
    "strict": true,
    "noImplicitAny": false,
    "strictNullChecks": true,
    "noImplicitThis": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitReturns": true,
    "checkJs": false
  },
  "nodeModulesDir": "auto"
}
